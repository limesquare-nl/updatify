{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("limesquare\\updatify\\assetbundles\\updatify\\UpdatifyAsset") %}

{{ forms.textField({
    label: 'E-mail',
    instructions: 'Enter notification e-mail here.' | t,
    id: 'uEmail',
    name: 'uEmail',
    value: settings.uEmail,
    errors: settings.getErrors('uEmail')
    })
}}
{{ forms.textField({
    label: 'First name',
    instructions: 'Enter first name here.' | t,
    id: 'uFirstname',
    name: 'uFirstname',
    value: settings.uFirstname,
    errors: settings.getErrors('uFirstname')
    })
}}

{{ forms.textField({
    label: 'Last name',
    instructions: 'Enter last name here.' | t,
    id: 'uLastname',
    name: 'uLastname',
    value: settings.uLastname,
    errors: settings.getErrors('uLastname')
    })
}}